<!--- The default skin class for the Spark CheckBox component.

      @see spark.components.CheckBox

      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:SparkSkin 
    width="94" height="27"
    xmlns:fx="http://ns.adobe.com/mxml/2009"
    xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
    alpha.disabledStates="0.5">

    <fx:Metadata>
        <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.CheckBox")]
    ]]>
    </fx:Metadata>

    <fx:Script>
        <![CDATA[
            /**
             * @private
             */
            private static const focusExclusions:Array = [ "labelDisplay" ];

            /**
             * @private
             */
            override public function get focusSkinExclusions():Array
            {
                return focusExclusions;
            }
            ;
        ]]>
    </fx:Script>

    <s:states>
        <s:State name="up"/>
        <s:State name="over"
            stateGroups="overStates"/>
        <s:State name="down"
            stateGroups="downStates"/>
        <s:State name="disabled"
            stateGroups="disabledStates"/>
        <s:State name="upAndSelected"
            stateGroups="selectedStates"/>
        <s:State name="overAndSelected"
            stateGroups="overStates, selectedStates"/>
        <s:State name="downAndSelected"
            stateGroups="downStates, selectedStates"/>
        <s:State name="disabledAndSelected"
            stateGroups="disabledStates, selectedStates"/>
    </s:states>

    <!-- layer 1: fill -->
    <s:Rect 
        left="1" right="1" top="1" bottom="1"
        radiusX="4"
        radiusY="4">
        <s:fill>
            <s:LinearGradient rotation="-90">
                <s:GradientEntry 
                    color="0xfefefe"
                    ratio="0"/>
                <s:GradientEntry 
                    color="0xfafafa"
                    ratio="0.51"/>
                <s:GradientEntry 
                    color="0xefefef"
                    ratio="0.54"/>
                <s:GradientEntry 
                    color="0xdddddd"
                    ratio="0.87"/>
                <s:GradientEntry 
                    color="0xb5b5b5"
                    ratio="1"/>
            </s:LinearGradient>
        </s:fill>
        <s:fill.selectedStates>
            <s:LinearGradient rotation="-90">
                <s:GradientEntry 
                    color="0x76adfc"
                    ratio="0"/>
                <s:GradientEntry 
                    color="0x5292f1"
                    ratio="0.44"/>
                <s:GradientEntry 
                    color="0x4085ec"
                    ratio="0.54"/>
                <s:GradientEntry 
                    color="0x295ab2"
                    ratio="1"/>
            </s:LinearGradient>
        </s:fill.selectedStates>
    </s:Rect>

    <!-- layer 2: border -->
    <s:Rect 
        left="0" right="0" top="0" bottom="0"
        radiusX="4"
        radiusY="4">
        <s:stroke>
            <s:LinearGradientStroke rotation="-90">
                <s:GradientEntry 
                    color="0xbfbfbf"
                    ratio="0"/>
                <s:GradientEntry 
                    color="0x7d7d7d"
                    ratio="1"/>
            </s:LinearGradientStroke>
        </s:stroke>
        <s:stroke.selectedStates>
            <s:LinearGradientStroke rotation="-90">
                <s:GradientEntry 
                    color="0x538ad8"
                    ratio="0"/>
                <s:GradientEntry 
                    color="0x093889"
                    ratio="1"/>
            </s:LinearGradientStroke>
        </s:stroke.selectedStates>
    </s:Rect>

    <!-- layer 3: over -->

    <s:Group 
        width="100%" height="100%">

        <s:filters>
            <s:DropShadowFilter 
                color="0xffffff"
                angle="90"
                alpha="0.8"
                distance="1"
                inner="true"/>
        </s:filters>

        <!-- over fill -->
        <s:Rect 
            left="1" right="55" top="1" bottom="1"
            rotation="-90"
            excludeFrom="selectedStates"
            radiusX="4"
            radiusY="4">
            <s:fill>
                <s:LinearGradient>
                    <s:GradientEntry 
                        color="0xfcfcfc"
                        ratio="0"/>
                    <s:GradientEntry 
                        color="0xd6d6d6"
                        ratio="1"/>
                </s:LinearGradient>
            </s:fill>
        </s:Rect>

        <s:Rect 
            left="55" right="1" top="1" bottom="1"
            rotation="-90"
            includeIn="selectedStates"
            radiusX="4"
            radiusY="4">
            <s:fill>
                <s:LinearGradient>
                    <s:GradientEntry 
                        color="0xfcfcfc"
                        ratio="0"/>
                    <s:GradientEntry 
                        color="0xd6d6d6"
                        ratio="1"/>
                </s:LinearGradient>
            </s:fill>
        </s:Rect>

        <!-- over border -->
        <s:Rect 
            left="0" right="54" top="0" bottom="0"
            rotation="-90"
            excludeFrom="selectedStates"
            radiusX="4"
            radiusY="4">
            <s:stroke>
                <s:LinearGradientStroke>
                    <s:GradientEntry 
                        color="0x999999"
                        ratio="0"/>
                    <s:GradientEntry 
                        color="0x919191"
                        ratio="1"/>
                </s:LinearGradientStroke>
            </s:stroke>
        </s:Rect>

        <s:Rect 
            left="54" right="0" top="0" bottom="0"
            rotation="-90"
            includeIn="selectedStates"
            radiusX="4"
            radiusY="4">
            <s:stroke>
                <s:LinearGradientStroke>
                    <s:GradientEntry 
                        color="0x999999"
                        ratio="0"/>
                    <s:GradientEntry 
                        color="0x919191"
                        ratio="1"/>
                </s:LinearGradientStroke>
            </s:stroke>
        </s:Rect>
    </s:Group>

    <s:Label 
        left="40" right="0"
        color="0x8b8b8b"
        textAlign="center"
        verticalCenter="0"
        text="OFF"
        excludeFrom="selectedStates"/>

    <s:Label 
        left="0" right="40"
        color="0xFFFFFF"
        textAlign="center"
        verticalCenter="0"
        text="ON"
        includeIn="selectedStates">
        <s:filters>
            <s:DropShadowFilter 
                color="0"
                distance="1"
                angle="-90"
                alpha="0.65"
                blurX="0"
                blurY="0"/>
        </s:filters>
    </s:Label>

</s:SparkSkin>
